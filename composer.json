{
    "name": "ddayver/photo-rigma-biz",
    "description": "Open source photo gallery with multi-SUBD support",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Dark Dayver",
            "email": "admin@rigma.biz"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*",
        "ext-ctype": "*",
        "ext-session": "*",
        "ext-filter": "*",
        "ext-hash": "*",
        "ext-exif": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "Photorigma\\Classes\\": "src/Classes/",
            "Photorigma\\Interfaces\\": "src/Interfaces/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Photorigma\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "echo \"Composer установлен.\"",
            "echo \"Запускайте index.php из public/\""
        ],
        "post-update-cmd": [
            "echo \"Проект обновлён.\"",
            "echo \"Проверьте миграции в sql/.../update/\""
        ]
    }
}
